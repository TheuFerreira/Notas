<Window x:Class="Notas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notas"
        xmlns:control="clr-namespace:Notas.UserControls"
        mc:Ignorable="d"
        Icon="Resources/ic_notes.ico"
        Title="Notas" Height="700" Width="400" ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="{StaticResource Background}">

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="groupPostIt" Grid.Row="1" Margin="15,15,15,0">

            </StackPanel>
        </ScrollViewer>

        <Grid x:Name="topBar" Grid.Row="0" Background="{StaticResource Foreground}" MouseDown="TopBar_MouseDown">
            <Grid.Effect>
                <DropShadowEffect Direction="270" BlurRadius="15"/>
            </Grid.Effect>

            <Button x:Name="btnAdd" Click="BtnAdd_Click" Height="35" HorizontalAlignment="Left" Style="{StaticResource BtnTop}" VerticalAlignment="Center" Width="45">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="17" Foreground="White" HorizontalAlignment="Center" Text="&#xE710;" VerticalAlignment="Center"/>
                </Button.Content>
            </Button>

            <Button x:Name="btnDel" Click="BtnDel_Click" Height="35" HorizontalAlignment="Left" Margin="45,0,0,0" Style="{StaticResource BtnTop}" VerticalAlignment="Center" Width="45">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="17" Foreground="White" HorizontalAlignment="Left" Text="&#59213;" VerticalAlignment="Center"/>
                </Button.Content>
            </Button>

            <Button x:Name="btnSave" Height="35" HorizontalAlignment="Left" Margin="45,0,0,0" Style="{StaticResource BtnTop}" VerticalAlignment="Center" Visibility="Collapsed" Width="45">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="17" Foreground="White" HorizontalAlignment="Center" Text="&#xE74E;" VerticalAlignment="Center"/>
                </Button.Content>
            </Button>

            <TextBlock FontSize="18" Foreground="White" HorizontalAlignment="Center" Text="Notas" VerticalAlignment="Center"/>

            <Button x:Name="btnMinimize" Click="BtnMinimize_Click" Height="35" HorizontalAlignment="Right" Margin="0,0,45,0" Style="{StaticResource BtnTop}" VerticalAlignment="Center" Width="45">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="17" Foreground="White" HorizontalAlignment="Right" Text="&#59192;" VerticalAlignment="Center"/>
                </Button.Content>
            </Button>

            <Button x:Name="btnClose" Click="BtnClose_Click" Foreground="Red" Height="35" HorizontalAlignment="Right" Style="{StaticResource BtnTop}" VerticalAlignment="Center" Width="45">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="17" Foreground="White" HorizontalAlignment="Right" Text="&#59540;" VerticalAlignment="Center"/>
                </Button.Content>
            </Button>
        </Grid>

    </Grid>
</Window>
