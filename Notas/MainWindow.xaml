<Window x:Class="Notas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notas"
        xmlns:control="clr-namespace:Notas.UserControls"
        mc:Ignorable="d"
        Icon="Resources/ic_notes.ico"
        AllowsTransparency="True" Background="Transparent"
        Title="Notas" Height="500" Width="300" ResizeMode="NoResize" WindowStyle="None">
    <Border Background="{StaticResource Background}" CornerRadius="15,15,0,0">
        <Grid x:Name="gridField" Background="Transparent">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="1">
                <StackPanel x:Name="groupPostIt" Grid.Row="1" Margin="10,10,10,0"/>
            </ScrollViewer>

            <Border x:Name="topBar" CornerRadius="10,10,0,0" Grid.Row="0" Background="{StaticResource Foreground}" MouseDown="TopBar_MouseDown">
                <Border.Effect>
                    <DropShadowEffect Direction="270" BlurRadius="15"/>
                </Border.Effect>
                
                <Grid Background="Transparent">

                    <control:TopButton Click="BtnAdd_Click" Height="35" HorizontalAlignment="Left" Radius="10,0,0,0" SelectionColor="{StaticResource Background}" Text="&#xE710;" VerticalAlignment="Center" Width="45"/>
                    <control:TopButton x:Name="btnDel" Click="BtnDel_Click" Height="35" HorizontalAlignment="Left" Margin="45,0,0,0" SelectionColor="{StaticResource Background}" Text="&#59213;" Visibility="Collapsed" VerticalAlignment="Center" Width="45"/>
                    <control:TopButton x:Name="btnSave" Click="BtnSave_Click" Height="35" HorizontalAlignment="Left" Margin="45,0,0,0" SelectionColor="{StaticResource Background}" Text="&#xE74E;" Visibility="Collapsed" VerticalAlignment="Center" Width="45"/>
                    <control:TopButton x:Name="btnSettings" Click="BtnSettings_Click" Height="35" HorizontalAlignment="Left" Margin="45,0,0,0" SelectionColor="{StaticResource Background}" Text="&#xE713;" VerticalAlignment="Center" Width="45"/>

                    <TextBlock x:Name="titleNotas" FontSize="18" Foreground="White" HorizontalAlignment="Center" Text="Notas" VerticalAlignment="Center"/>

                    <control:TopButton Click="BtnMinimize_Click" Height="35" HorizontalAlignment="Right" Margin="0,0,45,0" SelectionColor="{StaticResource Background}" Text="&#59192;" VerticalAlignment="Center" Width="45"/>
                    <control:TopButton Click="BtnClose_Click" Height="35" HorizontalAlignment="Right" Radius="0,10,0,0" SelectionColor="Red" Text="&#59540;" VerticalAlignment="Center" Width="45"/>
                </Grid>
            </Border>

            <Border x:Name="panelColors" Grid.Row="2" Background="{StaticResource Foreground}">
                <Border.Effect>
                    <DropShadowEffect Direction="90" BlurRadius="15"/>
                </Border.Effect>

                <StackPanel x:Name="groupColors" Orientation="Horizontal" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
    
</Window>
